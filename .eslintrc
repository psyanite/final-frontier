{
  "parser": "babel-eslint",

  "extends": "eslint-config-rallycoding",

  "env": {
    "browser": true
  },

  "globals": {
    "fetch": true
  },

  "rules": {
    "global-require": 0,
    "no-underscore-dangle": 0,
    "react/require-extension": 0,
    "max-len": 0,
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "object-curly-spacing": ["error", "always"],
    "brace-style": ["error", "stroustrup"]
  }

}
